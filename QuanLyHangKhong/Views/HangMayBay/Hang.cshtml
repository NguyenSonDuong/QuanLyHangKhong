@model IEnumerable<QuanLyHangKhong.Models.HangMayBayModel>

@{
    ViewBag.Title = "Hang";
}

<h2>Thông Tin Hãng Máy Bay</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThoiGianThanhLap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThoiGianThanhLap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { maHang=item.MaHang }, new { @class = "btn  btn-primary" }) 
            @Html.ActionLink("Xóa", "Delete", new { maHang=item.MaHang }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
